<!-- page content -->
<div class="right_col" role="main">

    <div class="page-title">
        <div class="title_left">
            <h3>DashBoard</h3>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="x_panel">
        <div class="x_title">
            <h6>Bienvenido a Sniffer UPB, aquí podrás monitorear lo que está pasando con tu trafico de Red.</h6>
            <div class="clearfix"></div>
        </div>

        <div class=" x_content">
            <div class="m-0 row">
                <div class="col">
                    <div class="card-box">
                        <div class="form-group row">
                            <div class="col align-self-center text-center">
                                <h4>Pulsa aquí para buscar las interfaces de red de tu computador</h4>
                                <form action="/tarjeta" method="get">
                                    <button type=" submit " id="interfaces " class="btn btn-success"><i class="fa fa-search "> </i>   Buscar</button>
                                </form>
                                </div>
                            <div class="col-sm-3">
                                <table class="table table-striped table-hover ">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Número</th>
                                            <th class="text-center">Tarjeta de Red</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       <% if (tarjetas) { %>
                                        <% for (var i = 0; i < tarjetas.length; i++) { %>
                                <tr>
                                    <td class="text-center">
                                        <%= tarjetas[i].id %>
                                    </td>
                                    <td class="text-center">
                                        <%= tarjetas[i].nombre %>   
                                    </td>
                                </tr>
                                    <% } %>
                                <% }  %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br>

                        <form class="m-0 was-validated " onsubmit="return false">
                            <h4>Configuración del Análisis de Red</h4>
                            <div class="m-0 form-group row ">
                                <div class="col-sm ">
                                    <select class="custom-select " id="ElegirInter" required>
                                              <option value="">Tarjeta de Red</option>
                                              <option value="1">Loopback </option>
                                              <option value="2">Ethernet</option>
                                              <option value="3">Wifi</option>
                                            </select>
                                    <div class="invalid-feedback ">Selecciona un intervalo de tiempo válido</div>
                                </div>
                                <div class="col-sm ">
                                    <select class="custom-select " id="tiempoDeter" required>
                                              <option value="">Tiempo de Análisis</option>
                                              <option value="30">30 segundos</option>
                                              <option value="60">1 minuto</option>
                                              <option value="180">3 minutos</option>
                                            </select>
                                    <div class="invalid-feedback ">Selecciona un intervalo de tiempo válido</div>
                                </div>
                                <div class="col-sm ">
                                    <button type="submit " id="aceptar" class="btn btn-success "><i class="fa fa-play-circle "> </i>   Empezar</button>
                                </div>
                                <div class="col-sm-4 ">
                                    <h2 id="tiempoRes"></h2>
                                </div>
                            </div>
                        </form>
                        <br>

                        <div class="row">
                            <div class="col">
                                <div id="printbar" class="m-0"></div>
                                <table id="datosRedes" class="table table-striped table-bordered dt-responsive" width="100%">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Número</th>
                                            <th class="text-center">Tipo de Protocolo</th>
                                            <th class="text-center">MAC Origen</th>
                                            <th class="text-center">MAC Destino</th>
                                            <th class="text-center">Bytes Entregados</th>
                                            <th class="text-center">Bytes Capturados</th>
                                            <th class="text-center">IP Origen</th>
                                            <th class="text-center">IP Destino</th>
                                            <th class=" text-center none">Trama</th>
                                        </tr>
                                    </thead>
                                    <tbody>    
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

